{% extends "html.j2" %}

{% block content %}
    <div class="left-column">
      <div>
        <h1>{{ title }}</h1>
        <ul class="card-list">
        {% for page in past.pages|sort(attribute="link", reverse=true) %}
          <li class="card"><b>{{ format_date(page.from) }}{% if page.to is defined %} - {{ format_date(page.to) }}{% endif %}</b><br><a href="{{ page.link }}">{{ page.title }}</a></li>
        {% endfor %}
        </ul>
      </div>
    </div>
{% endblock %}