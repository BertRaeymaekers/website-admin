{% extends "html.j2" %}

{% block content %}
    <div class="left-column">
      <div>
        <h1>{{ title }}</h1>
        <ul class="card-list">
        {% for page in future.pages|sort(attribute="link", reverse=true) %}
          <li class="card"><b>{{ format_date(page.from) }}{% if page.to is defined %} - {{ format_date(page.to) }}{% endif %}</b><br><a href="{{ page.link }}">{{ page.title }}</a>{% if page.download is defined %}<br>Download: <a href="{{ page.download.link }}">{{ page.download.txt }}</a>{% endif %}{% if page.title_bold is defined %}<br><b>{{ page.title_bold }}</b>{% endif %}</li>
        {% endfor %}
        </ul>
      </div>
    </div>
{% endblock %}