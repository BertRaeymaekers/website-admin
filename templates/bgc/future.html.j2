{% block content %}
    <div class="left-column">
      <h1>{{ title }}</h1>
      {% if body is defined %}
      <h2>Terugblik/RÃ©trospective: <a href="/past/{{ html_filename }}">hier/ici</a>.</h2>
      {% endif %}
      {% if announcement is defined %}{{ announcement|safe }}{% endif %}
      {% if download is defined %}
      {% set downloads = [download] %}
      {% endif %}
      {% for download in downloads %}
      <h2>Downloads</h2>
      <ul class="card-list">
        <li class="card"><a href="/downloads/{{ download.link }}">{{ download.txt }}</a></li>
