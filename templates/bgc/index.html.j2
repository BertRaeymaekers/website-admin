{% extends "html.j2" %}

{% block content %}
    <!-- Left Column: Slideshow -->
    <div class="left-column">
      <div class="slideshow">
        {% for name, slide in slides.items() %}
          {% if slide.link is defined %}
          <a href="{{ slide.link }}">
          {% endif %}
          <img class="slides" src="{{ slide.img }}" alt="{{ slide.txt }}">
          {% if slide.link is defined %}
          </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- Right Column: Agenda -->
    <div class="right-column">
      <div class="agenda">
        {% if future is defined %}
        <h3>{{ future.title }}</h3>
        <ul>
        {% for page in future.pages|sort(attribute="link", reverse=true) %}
          {% if loop.index < 10 %}
            <li><b>{{ format_date(page.from) }}{% if page.to is defined %} - {{ format_date(page.to) }}{% endif %}</b>: <a href="{{ page.link }}">{{ page.title }}</a>{% if page.download is defined %} <a href="{{ page.download.link }}">{{ page.download.txt }}</a>{% endif %}{% if page.title_bold is defined %} <b>{{ page.title_bold }}</b>{% endif %}</li>
          {% elif loop.index == 10 %}
            <p><a href="/past.html">Meer...</a></p>
          {% endif %}
        {% endfor %}
        </ul>
        {% endif %}

        {% if past is defined %}
        <h3>{{ past.title }}</h3>
        <ul>
        {% for page in past.pages|sort(attribute="link", reverse=true) %}
          {% if loop.index < 10 %}
            <li><b>{{ format_date(page.from) }}{% if page.to is defined %} - {{ format_date(page.to) }}{% endif %}</b>: <a href="{{ page.link }}">{{ page.title }}</a></li>
          {% elif loop.index == 10 %}
            <p><a href="/past.html">Meer...</a></p>
          {% endif %}
        {% endfor %}
        </ul>
        {% endif %}
      </div>
    </div>
{% endblock %}